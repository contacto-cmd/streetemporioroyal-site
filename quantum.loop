    label { display: block; color: #888; font-size: 0.7rem; margin-bottom: 5px; letter-spacing: 1px; }
    input { 
      width: 100%; background: rgba(0,0,0,0.5); border: 1px solid #333; color: #fff;
      padding: 15px; font-family: 'Rajdhani'; font-size: 1.2rem; outline: none;
