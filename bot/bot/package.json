{
  "name": "royal-bot",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",                 // arranca bot + express (tu index)
    "start:http": "node server.js",           // solo el HTTP de health (opcional)
    "dev": "node --watch index.js",           // dev hot-reload (Node 18+)
    "register": "node register-commands.js",  // registrar slash commands
    "lint": "eslint .",
    "format": "prettier -w .",
    "health": "node -e \"fetch((process.env.BACKEND_URL||'http://localhost:3000')+'/health').then(r=>{if(!r.ok)process.exit(1);console.log('ok')}).catch(()=>process.exit(1))\""
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3"
  },
  "engines": { "node": ">=18" }
}
